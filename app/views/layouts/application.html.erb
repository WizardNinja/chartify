<!DOCTYPE html>
<html>
<head>
  <title>chartify.me</title>
  <%= stylesheet_link_tag "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<% if !current_user %>
<% else %>
<div class="container">
  
  <div id="sidebar">

    <div class="current-user">
      <% if current_user %>
      <%= image_tag current_user.profile_picture %>
      <div id="name">
        <%= current_user.name %>
      </div>
      <% end %>
      <% if current_user %>
        <%= link_to "Sign out", signout_path, id: "sign_out" %>
      <% end %>
    </div>

    <div id="friend">
      <div id="friend-header"></div>
      <ul>
        <li>
          <div id="chartifysearch">
          <label id="chartify-header" for="chartifysearch">friends on chartify</label>
          <input type="chartifysearch" name="chartifysearch" id="chartifysearch" placeholder="start typing friend" />
          <div id="chartifyField">
          </div>
          <br>
        </li>
      </ul>
    </div>

    <div id="searcharea">
      <label id="search-header" for="search">invite friends</label>
      <input type="search" name="search" id="search" placeholder="start typing friend" />
      <div id="searchField">
      </div>
    </div>
  </div>
<% end %>
  <div class="main-content">
    <a href="#" data-toggle=".container" <%= current_user ? "": 'style='+'background:#ccc;' %> id="sidebar-toggle">
      <span class="bar"></span>
      <span class="bar"></span>
      <span class="bar"></span>
    </a>
    <div id="logo">
      <%= image_tag "chartify-logo.png" %>
    </div>
  </div>
  <%= yield %>
</div>

</body>
</html>
